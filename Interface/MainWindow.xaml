<Window x:Class="Interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interface"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="450" Background="#FF1B1818">
    <Grid>
        <!-- Дисплей калькулятора -->
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" 
                 Width="450" Height="250" Background="#FF1B1818" FontSize="40" 
                 TextAlignment="Right" VerticalContentAlignment="Bottom" IsReadOnly="True"
                 Name="DisplayTextBox" Foreground="White" Padding="20"/>

        <!-- Кнопки калькулятора -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="400" Width="450" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Первый ряд кнопок -->
            <Button Content="AC" Grid.Row="0" Grid.Column="0" Margin="5" FontSize="20" Background="#FF3E518C" Foreground="white"/>
            <Button Content="+/-" Grid.Row="0" Grid.Column="1" Margin="5" FontSize="20" Background="#FF3E518C" Foreground="White" />
            <Button Content="%" Grid.Row="0" Grid.Column="2" Margin="5" FontSize="20" Background="#FF3E518C" Foreground="White"/>
            <Button Content="/" Grid.Row="0" Grid.Column="3" Margin="5" FontSize="20" Background="#FF3E518C" Foreground="White" />

            <!-- Второй ряд кнопок -->
            <Button Content="7" Grid.Row="1" Grid.Column="0" Margin="5" FontSize="20" Background="#FF333333" Foreground="White" />
            <Button Content="8" Grid.Row="1" Grid.Column="1" Margin="5" FontSize="20" Background="#FF333333" Foreground="White" />
            <Button Content="9" Grid.Row="1" Grid.Column="2" Margin="5" FontSize="20" Background="#FF333333" Foreground="White"/>
            <Button Content="*" Grid.Row="1" Grid.Column="3" Margin="5" FontSize="20" Background="#FF3E518C" Foreground="White" />

            <!-- Третий ряд кнопок -->
            <Button Content="4" Grid.Row="2" Grid.Column="0" Margin="5" FontSize="20" Background="#FF333333" Foreground="White" />
            <Button Content="5" Grid.Row="2" Grid.Column="1" Margin="5" FontSize="20" Background="#FF333333" Foreground="White" />
            <Button Content="6" Grid.Row="2" Grid.Column="2" Margin="5" FontSize="20" Background="#FF333333" Foreground="White" />
            <Button Content="-" Grid.Row="2" Grid.Column="3" Margin="5" FontSize="20" Background="#FF3E518C" Foreground="White" />

            <!-- Четвертый ряд кнопок -->
            <Button Content="1" Grid.Row="3" Grid.Column="0" Margin="5" FontSize="20" Background="#FF333333" Foreground="White" />
            <Button Content="2" Grid.Row="3" Grid.Column="1" Margin="5" FontSize="20" Background="#FF333333" Foreground="White" />
            <Button Content="3" Grid.Row="3" Grid.Column="2" Margin="5" FontSize="20" Background="#FF333333" Foreground="White" />
            <Button Content="+" Grid.Row="3" Grid.Column="3" Margin="5" FontSize="20" Background="#FF3E518C" Foreground="White" />

            <!-- Пятый ряд кнопок -->
            <Button Content="C" Grid.Row="4" Grid.Column="0" Margin="5" FontSize="20" Background="#FF333333" Foreground="White" Click="Button_Click_1"/>
            <Button Content="0" Grid.Row="4" Grid.Column="1" Margin="5" FontSize="20" Background="#FF333333" Foreground="White" />
            <Button Content="," Grid.Row="4" Grid.Column="2" Margin="5" FontSize="20" Background="#FF333333" Foreground="White"/>
            <Button Content="=" Grid.Row="4" Grid.Column="3" Margin="5" FontSize="20" Background="#FF3E518C" Foreground="White"/>
        </Grid>
    </Grid>
</Window>