<Window x:Name="Window"
        x:Class="Interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interface"
        mc:Ignorable="d"
        Title="Калькулятор"
        Height="700"
        Width="450"
        Background="#FF1B1818"
        ResizeMode="NoResize">
    <!-- Основной TabControl -->
    <TabControl Background="#FF1B1818">

        <!-- Вкладка 1: Калькулятор -->
        <TabItem Header="Калькулятор"
                 Background="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="115*" />
                    <ColumnDefinition Width="329*" />
                </Grid.ColumnDefinitions>
                <!-- Дисплей калькулятора -->
                <StackPanel VerticalAlignment="Top"
                            Height="200"
                            Width="450"
                            Grid.ColumnSpan="2"
                            Margin="0,0,-6,0">
                    <!-- Верхний TextBox для основного результата -->
                    <TextBox x:Name="DisplayTextBox"
                             HorizontalAlignment="Center"
                             TextWrapping="Wrap"
                             Text="0"
                             Width="450"
                             Height="119"
                             Background="#FF1B1818"
                             FontSize="40"
                             TextAlignment="Right"
                             VerticalContentAlignment="Bottom"
                             IsReadOnly="True"
                             Foreground="White"
                             Padding="0,0,30,0"
                             TextChanged="DisplayTextBox_TextChanged"
                             BorderThickness="0" />

                    <!-- Нижний TextBox для отображения текущей операции -->
                    <TextBox x:Name="OperationTextBox"
                             HorizontalAlignment="Center"
                             TextWrapping="Wrap"
                             Text=""
                             VerticalAlignment="Top"
                             Width="450"
                             Height="80"
                             Background="#FF1B1818"
                             FontSize="30"
                             TextAlignment="Right"
                             VerticalContentAlignment="Center"
                             IsReadOnly="True"
                             Foreground="Gray"
                             Padding="0,0,30,0"
                             BorderThickness="0" />
                </StackPanel>

                <!-- Кнопки калькулятора -->
                <Grid x:Name="Center"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Bottom"
                      Height="400"
                      Width="450"
                      Margin="-3,0,0,20"
                      Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Первый ряд кнопок -->
                    <Button x:Name="AC"
                            Content="AC"
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="5"
                            FontSize="20"
                            Background="#FF3E518C"
                            Foreground="white"
                            Click="Button_Click_2" />
                    <Button x:Name="back"
                            Content="&lt;="
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="5"
                            FontSize="20"
                            Background="#FF3E518C"
                            Foreground="White"
                            Click="BackspaceButton_Click" />
                    <Button x:Name="slesh"
                            Content="/"
                            Grid.Row="0"
                            Grid.Column="3"
                            Margin="5"
                            FontSize="20"
                            Background="#FF3E518C"
                            Foreground="White"
                            Click="OperatorButton_Click" />

                    <!-- Второй ряд кнопок -->
                    <Button x:Name="seven"
                            Content="7"
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="5"
                            FontSize="20"
                            Background="#FF333333"
                            Foreground="White"
                            Click="NumberButton_Click" />
                    <Button x:Name="eight"
                            Content="8"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5"
                            FontSize="20"
                            Background="#FF333333"
                            Foreground="White"
                            Click="NumberButton_Click" />
                    <Button x:Name="nine"
                            Content="9"
                            Grid.Row="1"
                            Grid.Column="2"
                            Margin="5"
                            FontSize="20"
                            Background="#FF333333"
                            Foreground="White"
                            Click="NumberButton_Click" />
                    <Button x:Name="Asterisk"
                            Content="*"
                            Grid.Row="1"
                            Grid.Column="3"
                            Margin="5"
                            FontSize="20"
                            Background="#FF3E518C"
                            Foreground="White"
                            Click="OperatorButton_Click" />

                    <!-- Третий ряд кнопок -->
                    <Button x:Name="four"
                            Content="4"
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="5"
                            FontSize="20"
                            Background="#FF333333"
                            Foreground="White"
                            Click="NumberButton_Click" />
                    <Button x:Name="five"
                            Content="5"
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="5"
                            FontSize="20"
                            Background="#FF333333"
                            Foreground="White"
                            Click="NumberButton_Click" />
                    <Button x:Name="six"
                            Content="6"
                            Grid.Row="2"
                            Grid.Column="2"
                            Margin="5"
                            FontSize="20"
                            Background="#FF333333"
                            Foreground="White"
                            Click="NumberButton_Click" />
                    <Button x:Name="minus"
                            Content="-"
                            Grid.Row="2"
                            Grid.Column="3"
                            Margin="5"
                            FontSize="20"
                            Background="#FF3E518C"
                            Foreground="White"
                            Click="OperatorButton_Click" />

                    <!-- Четвертый ряд кнопок -->
                    <Button x:Name="one"
                            Content="1"
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="5"
                            FontSize="20"
                            Background="#FF333333"
                            Foreground="White"
                            Click="NumberButton_Click" />
                    <Button x:Name="two"
                            Content="2"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="5"
                            FontSize="20"
                            Background="#FF333333"
                            Foreground="White"
                            Click="NumberButton_Click" />
                    <Button x:Name="three"
                            Content="3"
                            Grid.Row="3"
                            Grid.Column="2"
                            Margin="5"
                            FontSize="20"
                            Background="#FF333333"
                            Foreground="White"
                            Click="NumberButton_Click" />
                    <Button x:Name="plus"
                            Content="+"
                            Grid.Row="3"
                            Grid.Column="3"
                            Margin="5"
                            FontSize="20"
                            Background="#FF3E518C"
                            Foreground="White"
                            Click="OperatorButton_Click" />

                    <!-- Пятый ряд кнопок -->
                    <Button x:Name="doublezero"
                            Content="00"
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="5"
                            FontSize="20"
                            Background="#FF333333"
                            Foreground="White"
                            Click="NumberButton_Click" />
                    <Button x:Name="zero"
                            Content="0"
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="5"
                            FontSize="20"
                            Background="#FF333333"
                            Foreground="White"
                            Click="NumberButton_Click" />
                    <Button x:Name="Comma_"
                            Content=","
                            Grid.Row="4"
                            Grid.Column="2"
                            Margin="5"
                            FontSize="20"
                            Background="#FF333333"
                            Foreground="White"
                            Click="CommaButton_Click" />
                    <Button x:Name="Equals"
                            Content="="
                            Grid.Row="4"
                            Grid.Column="3"
                            Margin="5"
                            FontSize="20"
                            Background="#FF3E518C"
                            Foreground="White"
                            Click="EqualsButton_Click" />
                </Grid>
            </Grid>
        </TabItem>
        <!-- Вкладка 2: например история -->
        <TabItem Header="История"
                 Background="White">
            <Grid Margin="10"
                  Background="#FF1B1818">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBox x:Name="HistoryTextBox"
                         Grid.Row="0"
                         Background="#FF2B2B2B"
                         Foreground="White"
                         FontFamily="Consolas"
                         FontSize="20"
                         BorderThickness="0"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Padding="10"
                         Margin="0,0,0,10" />

                <Button x:Name="ClearHistoryButton"
                        Grid.Row="1"
                        Content="Очистить историю"
                        Height="40"
                        Background="#FF3E518C"
                        Foreground="White"
                        FontSize="16"
                        Click="ClearHistoryButton_Click" />
            </Grid>
        </TabItem>
    </TabControl>
</Window>